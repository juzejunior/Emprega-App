<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvOfferJobs"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:elevation="2dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="40dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvEmpresaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Nome da Empresa"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvOcuppation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEmpresaName"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="nome da vaga"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOcuppation"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Experiência necessária"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvExperience"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Horas a trabalhar" />

        <TextView
            android:id="@+id/tvBairroCidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Bairro" />

        <TextView
            android:id="@+id/tvHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBairroCidade"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Salário" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#e0e0e0">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f44336"
                android:padding="8dp"
                android:text="Agora não!"
                android:textColor="#FFF"
                android:layout_alignBaseline="@+id/button4"
                android:layout_alignBottom="@+id/button4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:layout_marginRight="38dp"
                android:background="#4caf50"
                android:text="JOB!"
                android:textColor="#FFF" />

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>
